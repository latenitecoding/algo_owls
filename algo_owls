# :command.initialize
initialize() {
  version="0.1.0"
  long_usage=''
  set -e

  # :command.environment_variables_default
  export ALGO_EXT="${ALGO_EXT:-.txt}"
  export ALGO_SOLUTIONS="${ALGO_SOLUTIONS:-./src/solutions}"

}

# :command.run
run() {
  declare -A args=()
  declare -A deps=()
  declare -a other_args=()
  declare -a input=()
  normalize_input "$@"
  parse_requirements "${input[@]}"

  case "$action" in
    "init") algo_owls_init_command ;;
    "upload") algo_owls_upload_command ;;
  esac
}

initialize
run "$@"
